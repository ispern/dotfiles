{{ if and (eq .chezmoi.os "linux") (contains .chezmoi.osRelease.idLike "debian") -}}

{{ $packages := list
     "tree"
     "build-essential"
     "procps"
     "curl"
     "unzip"
     "file"
     "git"
     "language-pack-ja"
     "xdg-utils"
     "zsh"
     "fish" -}}
{{ $classicSnaps := list -}}

{{ $sudo := "sudo " -}}
{{ if eq .chezmoi.username "root" -}}
{{   $sudo = "" -}}
{{ end -}}

#!/bin/bash

{{ $sudo }} apt update && \
     {{ $sudo }} apt install -y software-properties-common && \
     {{ $sudo }} apt-add-repository ppa:fish-shell/release-3 && \
     {{ $sudo }} apt update && \
     {{ $sudo }} apt install -y {{ $packages | join " " }}
{{ end -}} 
