{
    "profiles": [
        {
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "product_id": 4283,
                        "vendor_id": 4817
                    },
                    "ignore": true
                }
            ],
            "name": "Default profile",
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        },
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Map left_control to left_command except in Terminal/Alacritty/Ghostty",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.apple\\.Terminal$",
                                            "^org\\.alacritty$",
                                            "^com\\.mitchellh\\.ghostty$"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "left_control",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "left_command" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "PageUp/PageDown → ページスクロール（そのまま）",
                        "manipulators": [
                            {
                                "from": { "key_code": "page_up" },
                                "to": [{ "key_code": "page_up" }],
                                "type": "basic"
                            },
                            {
                                "from": { "key_code": "page_down" },
                                "to": [{ "key_code": "page_down" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Home/End → Cmd+Left/Right（行頭/行末）",
                        "manipulators": [
                            {
                                "from": { "key_code": "home" },
                                "to": [
                                    {
                                        "key_code": "left_arrow",
                                        "modifiers": ["left_command"]
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": { "key_code": "end" },
                                "to": [
                                    {
                                        "key_code": "right_arrow",
                                        "modifiers": ["left_command"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
